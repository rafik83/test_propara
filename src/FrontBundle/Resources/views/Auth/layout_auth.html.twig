<!DOCTYPE html>

<html>
    <head>
        {% set mycolor =  'color'|get_theme  %}
        {% set logo =  'logo'|get_theme  %}
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <title>{% block title %}Administration{% endblock %}</title>


        <!-- Font CSS (Via CDN) -->
        <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
        <script src="https://cdn.jsdelivr.net/webshim/1.12.4/extras/modernizr-custom.js"></script>
        <script src="https://cdn.jsdelivr.net/webshim/1.12.4/polyfiller.js"></script>
        <script src="{{ asset("assets/js/webshims/shims/i18n/formcfg-fr.js") }}"></script>

        <!-- Theme CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset("assets/skin/default_skin/css/theme.css") }}" >

        <!-- Admin Forms CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset("assets/admin-tools/admin-forms/css/admin-forms.css") }}" >

        <!-- Favicon -->
        <link rel="shortcut icon" href="{{ asset("assets/img/favicon.ico") }}" >
        <link href={{ asset('assets/css/custom.css') }} rel="stylesheet">
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" ></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js" ></script>
        <![endif]-->
        <style>

            body.sb-top #sidebar_left .sidebar-menu > li.active > a, body.sb-top #sidebar_left .sidebar-menu > li:hover > a, body.sb-top #sidebar_left .sidebar-menu > li > a.menu-open, body.sb-top #sidebar_left .sidebar-menu > li > a:hover, body.sb-top #sidebar_left .sidebar-menu > li > a:focus {
                background-color: {{ mycolor }} !important;
            }
            body.sb-top #sidebar_left .sidebar-menu > li > a {
                color: #fff;
            }
            .clx2{

                background-color: #7bc142 !important;
                color: #FFFFFF;
            }
            #sidebar_left {
                background-color: {{ mycolor|change_color(-0.7) }};
            }

            .btn-primary {
                background-color: {{ mycolor }} !important;
            }
            .btn-primary:active, .btn-primary:hover, .btn-primary:focus {
                background-color: {{ mycolor|change_color(-0.7) }} !important;
                border-color: {{ mycolor }} !important;
            }

            .admin-form .panel-info.heading-border:before, .admin-form .panel-info .heading-border:before {
                background-color: {{ mycolor }};
            }
            .text-primary {
                color: {{ mycolor }};
            }
            a {
                color: {{ mycolor }};
                text-decoration: none;
            }
            a:hover {
                color: {{ mycolor|change_color(-0.7) }};
                text-decoration: none;
            }
        </style>
        <script>
            webshims.setOptions('forms-ext', {types: 'date'});
            webshims.polyfill('forms forms-ext');
            webshims.activeLang('fr');
        </script>
    </head>

    <body class="external-page external-alt sb-l-c sb-r-c">

        <!-- Start: Main -->
        {% block body %}

        {% endblock %}
        <!-- End: Main -->


        <!-- BEGIN: PAGE SCRIPTS -->

        <!-- jQuery -->
        <script src="{{ asset("vendor/jquery/jquery-1.11.1.min.js") }}" ></script>
        <script src="{{ asset("vendor/jquery/jquery_ui/jquery-ui.min.js") }}" ></script>

        <!-- Theme Javascript -->
        <script src="{{ asset("assets/js/utility/utility.js") }}" ></script>
        <script src="{{ asset("assets/js/demo/demo.js") }}" ></script>
        <script src="{{ asset("assets/js/main.js") }}" ></script>

        <!-- Page Javascript -->
        <script type="text/javascript">
            jQuery(document).ready(function () {

                "use strict";

                // Init Theme Core
                Core.init();

            });


            $("#login_user").keyup(function (e) {
                var login = $("#login_user").val();
                if (login.length === 14) {
                    //$("#login_user").attr("readonly", true);
                    //if (e.keyCode != 8) {
                    var array = Array.from(login);
                    var gg = array.slice(0, -1);
                    var val = '';
                    for(var i = 0;i<gg.length;i++){
                        val = val + gg[i] ;
                    }
                    $("#login_user").val(val);
                }
                if (login.length <= 13) {
                    $("#login_user").attr("readonly", false);
                }

            });
            //style="position: absolute; cursor: pointer"
            //$("#login_user").css('style','position: absolute; cursor: pointer');

        </script>

        <!-- END: PAGE SCRIPTS -->

    </body>

</html>
