{% extends "FrontBundle::layout.html.twig" %}
    {% block title %}
        Nouvelle catégorie
    {% endblock %}
{% block stylesheet %}
    {{ parent() }}

    <link href={{ asset('vendor/plugins/datatables/media/css/dataTables.bootstrap.css') }} rel="stylesheet">
    <link href={{ asset('vendor/plugins/datatables/media/css/dataTables.plugins.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/custom.css') }} rel="stylesheet">
{% endblock %}
{% block body %}
    <header class="custom_header">
        <div class="topbar-left">
            <ol class="breadcrumb">
                <li class="crumb-active">
                    <a href="dashboard.html">{% block b %}Nouvelle catégorie{% endblock %}</a>
                </li>
                <li class="crumb-icon">
                    <a href="{{ path('front_homepage') }}">
                        <span class="glyphicon glyphicon-home"></span>
                    </a>
                </li>
                <li class="crumb-link">
                    <a href="{{ path('front_manage_cats') }}">Gestion des catégorie</a>
                </li>
                <li class="crumb-trail">{{ block('b') }}</li>
            </ol>
        </div>
    </header>
    <br/>

    <hr class="small-margin"/>
    <br/>
    <div class="col-md-8 col-md-offset-4 admin-form theme-primary mw1000 center-block panel-body bg-light">

        {% block titleh1 %}
            <h3 style="margin-top:5px;" class="couleur-admin">Nouvelle catégorie : </h3>
        {% endblock %}
        <hr class="small-margin"/>
        {% block form %}
        <form action="{{ path('front_cats_add') }}" method="post" class="form-group" {{ form_enctype(form) }}>
            {% endblock %}
            {{ form_errors(form) }}
            <span class="required-input"> * </span> : Champs obligatoires.
            <br/>
            <br/>
            <br/>

            <div class="row">
                <div class="form-group col-md-6">
                    <div style="margin-bottom:10px;">
                        <label for="code">{{ form_label(form.code, "Code") }}<span
                                    class="required-input"> * </span></label>
                        {% if form.code.vars.errors|length %}
                            {# Affichage des erreurs pour ce champ précis. #}
                            <div class="form-group has-error">
                                <label class="control-label" for="inputError">
                                    {{ form_errors(form.code) }}
                                </label>
                                {{ form_widget(form.code, {'attr': {'class': 'task_field form-control', 'id':'code' } }) }}
                            </div>
                        {% else %}
                            {{ form_widget(form.code, {'attr': {'class': 'task_field form-control', 'id':'code' } }) }}
                        {% endif %}
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div style="margin-bottom:10px;">
                        <label for="user">{{ form_label(form.libelle, "Libelle") }}</label>
                        {% if form.libelle.vars.errors|length %}
                            {# Affichage des erreurs pour ce champ précis. #}
                            <div class="form-group has-error">
                                <label class="control-label" for="inputError">
                                    {{ form_errors(form.libelle) }}
                                </label>
                                {{ form_widget(form.libelle, {'attr': {'class': 'task_field form-control', 'id':'libelle' } }) }}
                            </div>
                        {% else %}
                            {{ form_widget(form.libelle, {'attr': {'class': 'task_field form-control', 'id':'libelle' } }) }}
                        {% endif %}
                    </div>
                </div>
            </div>

            {{ form_rest(form) }}
            <br/>

            <div class="panel-footer text-right">
                <button type="submit" class="btn btn-primary btn-xs"><i class="fa fa-check"></i> Valider le formulaire</button>
                <a href="{{ path('front_manage_cats') }}" class="btn btn-primary btn-xs"><i class="fa fa-arrow-left"></i> Annuler</a>
            </div>

        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ asset('vendor/plugins/datatables/media/js/jquery.dataTables.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('vendor/plugins/datatables/media/js/dataTables.bootstrap.js') }}"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>

{% endblock %}