<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="initial-scale=1.0"/>
        <meta name="format-detection" content="telephone=no"/>
        <title></title>
        <style type="text/css">
            body {
                width: 100%;
                margin: 0;
                padding: 0;
                -webkit-font-smoothing: antialiased;
            }

            @media only screen and (max-width: 600px) {
                table[class="table-row"] {
                    float: none !important;
                    width: 98% !important;
                    padding-left: 20px !important;
                    padding-right: 20px !important;
                }

                table[class="table-row-fixed"] {
                    float: none !important;
                    width: 98% !important;
                }

                table[class="table-col"], table[class="table-col-border"] {
                    float: none !important;
                    width: 100% !important;
                    padding-left: 0 !important;
                    padding-right: 0 !important;
                    table-layout: fixed;
                }

                td[class="table-col-td"] {
                    width: 100% !important;
                }

                table[class="table-col-border"] + table[class="table-col-border"] {
                    padding-top: 12px;
                    margin-top: 12px;
                    border-top: 1px solid #E8E8E8;
                }

                table[class="table-col"] + table[class="table-col"] {
                    margin-top: 15px;
                }

                td[class="table-row-td"] {
                    padding-left: 0 !important;
                    padding-right: 0 !important;
                }

                table[class="navbar-row"], td[class="navbar-row-td"] {
                    width: 100% !important;
                }

                img {
                    max-width: 100% !important;
                    display: inline !important;
                }

                img[class="pull-right"] {
                    float: right;
                    margin-left: 11px;
                    max-width: 125px !important;
                    padding-bottom: 0 !important;
                }

                img[class="pull-left"] {
                    float: left;
                    margin-right: 11px;
                    max-width: 125px !important;
                    padding-bottom: 0 !important;
                }

                table[class="table-space"], table[class="header-row"] {
                    float: none !important;
                    width: 98% !important;
                }

                td[class="header-row-td"] {
                    width: 100% !important;
                }
            }

            @media only screen and (max-width: 480px) {
                table[class="table-row"] {
                    padding-left: 16px !important;
                    padding-right: 16px !important;
                }
            }

            @media only screen and (max-width: 320px) {
                table[class="table-row"] {
                    padding-left: 12px !important;
                    padding-right: 12px !important;
                }
            }

            @media only screen and (max-width: 458px) {
                td[class="table-td-wrap"] {
                    width: 100% !important;
                }
            }
        </style>
    </head>
    <body style="font-family: Arial, sans-serif; font-size:13px; color: #444444; min-height: 200px;" bgcolor="#E4E6E9"
          leftmargin="0" topmargin="0" marginheight="0" marginwidth="0">
        <table width="100%" height="100%" bgcolor="#E4E6E9" cellspacing="0" cellpadding="0" border="0">
            <tr>
                <td width="100%" align="center" valign="top" bgcolor="#E4E6E9"
                    style="background-color:#E4E6E9; min-height: 200px;">
                    <table>
                        <tr>
                            <td class="table-td-wrap" align="center" width="601">
                                <table class="table-space" height="18"
                                       style="height: 18px; font-size: 0px; line-height: 0; width: 601px; background-color: #e4e6e9;"
                                       width="601" bgcolor="#E4E6E9" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="18"
                                                style="height: 18px; width: 601px; background-color: #e4e6e9;" width="601"
                                                bgcolor="#E4E6E9" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table-space" height="8"
                                       style="height: 8px; font-size: 0px; line-height: 0; width: 601px; background-color: #ffffff;"
                                       width="601" bgcolor="#FFFFFF" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="8"
                                                style="height: 8px; width: 601px; background-color: #ffffff;" width="601"
                                                bgcolor="#FFFFFF" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table-row" width="601" bgcolor="#FFFFFF"
                                       style="table-layout: fixed; background-color: #ffffff;" cellspacing="0" cellpadding="0"
                                       border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-row-td"
                                                style="font-family: Arial, sans-serif; line-height: 19px; color: #444444; font-size: 13px; font-weight: normal; padding-left: 36px; padding-right: 36px;"
                                                valign="top" align="left">
                                                <table class="table-col" align="left" width="501" cellspacing="0" cellpadding="0"
                                                       border="0" style="table-layout: fixed;">
                                                    <tbody>
                                                        <tr>
                                                            <td class="table-col-td" width="501"
                                                                style="font-family: Arial, sans-serif; line-height: 19px; color: #444444; font-size: 13px; font-weight: normal; width: 501px;"
                                                                valign="top" align="left">
                                                                <img src="{{ url_site ~ asset('assets/img/logos/logo.png')}}" style="max-width:100%;height:auto;"  />

                                                                <hr />
                                                                <div style="font-family: Arial, sans-serif; line-height: 20px; color: #444444; font-size: 13px;">

                                                                    Bonjour,<br /><br />

                                                                    Le traitement planifié des bulletins de <b>{{ company }}</b> a été effectué avec succès, ci-dessous la
                                                                    Liste des bulletins à imprimer et à envoyer aux salariés<br /><br />
                                                                    Mois : {{ month }}, Année : {{ year }}

                                                                    {% if list1p|length == 0 %}
                                                                        <table >
                                                                            <thead>
                                                                                <th  style="background: #11549c;padding:5px;color:#fff">Nom complet</th> <th  style="background: #11549c;padding:5px;color:#fff">Matricule</th>
                                                                            </thead>
                                                                            <tbody>
                                                                                {% for salary in salaries %}
                                                                                    <tr style="border: 1px solid #11549c;padding:5px;">
                                                                                        <td style="border: 1px solid #11549c;padding:5px;">{{ salary.nom }} {{ salary.prenom }}</td> <td  style="border: 1px solid #11549c;padding:5px;"> {{ salary.matricule }}</td>
                                                                                    </tr>
                                                                                {% endfor %}
                                                                            </tbody>
                                                                        </table>
                                                                    {% else %}
                                                                        <h3>nombre de salariés : {{ list1p|length }} </h3><br />
                                                                        {% if list1p|length > 0 %}
                                                                            <table >

                                                                                <thead>
                                                                                    <th  style="background: #11549c;padding:5px;color:#fff">Nom complet</th> <th  style="background: #11549c;padding:5px;color:#fff">Matricule</th>
                                                                                </thead>
                                                                                <tbody>
                                                                                    {% for salary in list1p %}
                                                                                        <tr style="border: 1px solid #11549c;padding:5px;">
                                                                                            <td style="border: 1px solid #11549c;padding:5px;">{{ salary.nom }} {{ salary.prenom }}</td> <td  style="border: 1px solid #11549c;padding:5px;"> {{ salary.matricule }}</td>
                                                                                        </tr>
                                                                                    {% endfor %}
                                                                                </tbody>
                                                                            </table>
                                                                        {% endif %}
                                                                    {% endif %}
                                                                    <br />
                                                                    <br />
                                                                    Le zip <b>{{ filename }}</b> contenant les bulletins à imprimer est disponible pour impression dans la console d'administration de FULLOFFICE.
                                                                    <br />
                                                                    Cordialement,<br />

                                                                    <b>L’équipe Fulloffice</b>

                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table-space" height="12"
                                       style="height: 12px; font-size: 0px; line-height: 0; width: 601px; background-color: #ffffff;"
                                       width="601" bgcolor="#FFFFFF" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="12"
                                                style="height: 12px; width: 601px; background-color: #ffffff;" width="601"
                                                bgcolor="#FFFFFF" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table-space" height="16"
                                       style="height: 16px; font-size: 0px; line-height: 0; width: 601px; background-color: #ffffff;"
                                       width="601" bgcolor="#FFFFFF" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="16"
                                                style="height: 16px; width: 601px; background-color: #ffffff;" width="601"
                                                bgcolor="#FFFFFF" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>



                                <table class="table-space" height="6"
                                       style="height: 6px; font-size: 0px; line-height: 0; width: 601px; background-color: #ffffff;"
                                       width="601" bgcolor="#FFFFFF" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="6"
                                                style="height: 6px; width: 601px; background-color: #ffffff;" width="601"
                                                bgcolor="#FFFFFF" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table-row-fixed" width="601" bgcolor="#FFFFFF"
                                       style="table-layout: fixed; background-color: #ffffff;" cellspacing="0" cellpadding="0"
                                       border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-row-fixed-td"
                                                style="font-family: Arial, sans-serif; line-height: 19px; color: #444444; font-size: 13px; font-weight: normal; padding-left: 1px; padding-right: 1px;"
                                                valign="top" align="left">
                                                <table class="table-col" align="left" width="599" cellspacing="0" cellpadding="0"
                                                       border="0" style="table-layout: fixed;">
                                                    <tbody>
                                                        <tr>
                                                            <td class="table-col-td" width="599"
                                                                style="font-family: Arial, sans-serif; line-height: 19px; color: #444444; font-size: 13px; font-weight: normal;"
                                                                valign="top" align="left">
                                                                <table width="100%" cellspacing="0" cellpadding="0" border="0"
                                                                       style="table-layout: fixed;">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td width="100%" align="center" bgcolor="#f5f5f5"
                                                                                style="font-family: Arial, sans-serif; line-height: 24px; color: #bbbbbb; font-size: 13px; font-weight: normal; text-align: center; padding: 9px; border-width: 1px 0px 0px; border-style: solid; border-color: #e3e3e3; background-color: #f5f5f5;"
                                                                                valign="top">
                                                                                <a href="#"
                                                                                   style="color: #428bca; text-decoration: none; background-color: transparent;">Fulloffice &copy;
                                                                                    2016</a>
                                                                                <br>
                                                                                    <a href="#"
                                                                                       style="color: #478fca; text-decoration: none; background-color: transparent;">twitter</a>
                                                                                    .
                                                                                    <a href="#"
                                                                                       style="color: #5b7a91; text-decoration: none; background-color: transparent;">facebook</a>
                                                                                    .
                                                                                    <a href="#"
                                                                                       style="color: #dd5a43; text-decoration: none; background-color: transparent;">google+</a>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table-space" height="1"
                                       style="height: 1px; font-size: 0px; line-height: 0; width: 601px; background-color: #ffffff;"
                                       width="601" bgcolor="#FFFFFF" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="1"
                                                style="height: 1px; width: 601px; background-color: #ffffff;" width="601"
                                                bgcolor="#FFFFFF" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table-space" height="36"
                                       style="height: 36px; font-size: 0px; line-height: 0; width: 601px; background-color: #e4e6e9;"
                                       width="601" bgcolor="#E4E6E9" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td class="table-space-td" valign="middle" height="36"
                                                style="height: 36px; width: 601px; background-color: #e4e6e9;" width="601"
                                                bgcolor="#E4E6E9" align="left">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>


